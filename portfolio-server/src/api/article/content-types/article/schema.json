{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Content articles for RAG demonstration"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "summary": {
      "type": "text"
    },
    "tags": {
      "type": "json"
    },
    "author": {
      "type": "string"
    },
    "category": {
      "type": "enumeration",
      "enum": ["technology", "tutorial", "development", "tips", "news"],
      "default": "technology"
    }
  }
}
